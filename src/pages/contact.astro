---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact - Bart Wildash" description="Get in touch">
  <Header />

  <main>
    <section class="max-w-4xl mx-auto px-6 py-16 md:py-24">
      <h1 class="text-5xl md:text-6xl font-bold mb-8 text-[var(--text-primary)] leading-tight">
        Get in touch
      </h1>

      <p class="text-xl text-[var(--text-secondary)] mb-12 leading-relaxed">
        I'm always interested in hearing about new projects, collaborations, and ideas.
      </p>

      <div class="card-shadow bg-[var(--bg-card)] rounded-[20px] p-8">
        <div class="space-y-6">
          <div>
            <h2 class="text-lg font-semibold mb-2 text-[var(--text-primary)]">Email</h2>
            <a
              href="mailto:bart@wildash.com"
              class="text-[var(--flexoki-blue)] hover:underline text-lg"
            >
              bart@wildash.com
            </a>
          </div>

          <div>
            <h2 class="text-lg font-semibold mb-3 text-[var(--text-primary)]">Quick intro</h2>
            <a
              href="#"
              class="btn-primary inline-flex"
            >
              Schedule 15 min call
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
