---
import ProjectListItem from './ProjectListItem.astro';
import projects from '../data/projects.json';
---

<div class="project-list-container">
  <!-- Filter Buttons -->
  <div class="flex items-center gap-3 mb-8 flex-wrap">
    <button
      class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all"
      data-filter="all"
      aria-label="Show all projects"
    >
      All
    </button>
    <button
      class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all"
      data-filter="hardware"
      aria-label="Show hardware projects"
    >
      Hardware
    </button>
    <button
      class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all"
      data-filter="experiments"
      aria-label="Show experimental projects"
    >
      Experiments
    </button>
  </div>

  <!-- Project List -->
  <div id="project-list">
    {projects.map((project) => (
      <ProjectListItem
        slug={project.slug}
        title={project.title}
        status={project.status}
        kind={project.kind}
        hardware={project.hardware}
        oneLiner={project.oneLiner}
      />
    ))}
  </div>
</div>

<style>
  .filter-btn {
    color: var(--text-secondary);
    border: 1px solid color-mix(in srgb, var(--ink) 12%, transparent);
  }

  .filter-btn:hover {
    color: var(--text-primary);
    background: color-mix(in srgb, var(--ink) 5%, transparent);
    border-color: color-mix(in srgb, var(--ink) 20%, transparent);
  }

  .filter-btn.active {
    color: var(--text-primary);
    background: color-mix(in srgb, var(--ink) 10%, transparent);
    border-color: color-mix(in srgb, var(--ink) 25%, transparent);
    font-weight: 600;
  }
</style>

<script>
  // Filter logic
  const filterButtons = document.querySelectorAll('[data-filter]');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');

      // Update active state
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter projects
      const projects = document.querySelectorAll('.project-list-item');
      projects.forEach((project) => {
        const isHardware = project.getAttribute('data-hardware') === 'true';
        const kind = project.getAttribute('data-kind');

        if (filter === 'all') {
          project.style.display = '';
        } else if (filter === 'hardware') {
          project.style.display = isHardware ? '' : 'none';
        } else if (filter === 'experiments') {
          project.style.display = kind === 'playful' ? '' : 'none';
        }
      });
    });
  });

  // Set initial active state
  document.querySelector('[data-filter="all"]')?.classList.add('active');
</script>
